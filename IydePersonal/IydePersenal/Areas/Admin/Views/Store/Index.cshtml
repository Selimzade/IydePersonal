@using IydePersonal.Application.Dtos.Store
@using IydePersonal.Domain.Entities
@model List<Store>

<div class="container-xxl flex-grow-1 container-p-y">

    <H4 class=" fw-bold py-3 mb-4">
        <span class="text-muted fw-light"><b>Stores</b>/ </span> List Store
    </H4>

    <!-- Hoverable Table rows -->

    <div class="Card" >

                 <div class="card-body">

            <div class="table-responsive text-nowrap m-3">

                          <a class="btn btn-success btn-md mb-3" asp-area="Admin" asp-controller="Store" asp-action="Add">
                              New <i class="bx bx-plus"></i>
                          </a>
                           

                               <table class="display table table-striped table-hover  table-dark" id="StoreTables" width="100%" cellspacing="0">
                                  <thead>
                                    <tr>
                                               <th>FullName</th>
                                              <th style="padding-left:900px">Details</th>
                                              <th>Edit&Delete</th>
                                    </tr>
                                  </thead>
                   
                                  <tbody class="table-border-bottom-0">

                                                          @foreach (var Store in Model)
                                                                              {
                                                             <tr>
                                                                    
                                                                <td>@Store.Name</td>
                                                                    <td style="padding-left:890px">
                                                                                 
                                                                       <button class="btn btn-primary btn-sm" onclick="openInventoryModal(@Store.Id)"style="text-align:center">Inventar</button>
                                                                    </td>                       

@* 
                                                              @*---------------------------------------------------------------------------------------------------------*@
                                                                    
                                                              @*----------------------------------------------------------------------------------------------------------*@
                                                                <td>
                                                                    <a class="btn btn-primary btn-xs" data-Id="@Store.Id" asp-area="Admin" asp-controller="Store" asp-action="Update" asp-route-StoreId="@Store.Id"><i class="bx bxs-edit"></i></a>
                                                                               <button class="btn btn-danger btn-xs" onclick="confirmDelete(@Store.Id)"><i class="bx bx-minus-circle"></i></button>
                                                                </td>
                                                            </tr>
                                                         }
                                  </tbody>
                                </table>
                      </div>
                </div>
   </div>

    <!--/ Hoverable Table rows -->
</div>






<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete operation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>
@*-------------------------------------------------------------------------------------------*@
 
<div id="inventoryModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Inventars</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Count</th>
                            <th>Price</th>
                            <th>Supplier</th>
                            <th>AddedDate</th>
                            <th>LastUpdated</th>
                            <th>Codebar</th>
                            <th>Description</th>
                            <th>EditDelete</th>
                        </tr>
                    </thead>
                    <tbody id="inventoryTableBody">
                        <!-- İnventarlar buraya AJAX ilə yüklənəcək -->
                    </tbody>
                </table>
                <button class="btn btn-success" onclick="openAddInventoryForm()"><i class="bx bx-Plus"></i></button>
                <div  id="addEditInventoryForm" style="display:none;">
                    <input type="hidden" id="inventoryId">
                    <input type="hidden" id="storeId">
                    <div class="form-group">
                        <label>Ad:</label>
                        <input type="text" id="name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Say:</label>
                        <input type="number" id="count" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Qiymət:</label>
                        <input type="number" id="price" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Supplier:</label>
                        <input type="number" id="supplier" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Codebar:</label>
                        <input type="number" id="codebar" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Description:</label>
                        <textarea id="description" name="description" class="form-control"></textarea>
                     </div>
                   
                    <button class="btn btn-primary" onclick="saveInventory()"style="margin-top:10px">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
