@using IydePersonal.Application.Dtos.Store
@using IydePersonal.Domain.Entities
@model List<Store>

<div class="container-xxl flex-grow-1 container-p-y">

    <H4 class=" fw-bold py-3 mb-4">
        <span class="text-muted fw-light"><b>Stores</b>/ </span> List Store
    </H4>

    <!-- Hoverable Table rows -->

    <div class="Card" >

                 <div class="card-body">

            <div class="table-responsive text-nowrap m-3">

                          <a class="btn btn-success btn-md mb-3" asp-area="Admin" asp-controller="Store" asp-action="Add">
                              New <i class="bx bx-plus"></i>
                          </a>

                               <table class="display table table-striped table-hover  table-dark" id="StoreTables" width="100%" cellspacing="0">
                                  <thead>
                                    <tr>
                                               <th>FullName</th>
                                              <th style="padding-left:900px">Details</th>
                                              <th>Edit&Delete</th>
                                    </tr>
                                  </thead>
                   
                                  <tbody class="table-border-bottom-0">

                                                          @foreach (var Store in Model)
                                                                              {
                                                             <tr>
                                                                    
                                                                <td>@Store.Name</td>
                                                                    <td style="padding-left:890px">
                                                                                 <button class="btn btn-primary btn-sm" onclick="openInventoryModal(@Store.Id)"style="text-align:center">İnventarı Aç</button>
                                                                    </td>
@* 
                                                              @*---------------------------------------------------------------------------------------------------------*@
                                                                    
                                                              @*----------------------------------------------------------------------------------------------------------*@
                                                                <td>
                                                                    <a class="btn btn-primary btn-xs" data-Id="@Store.Id" asp-area="Admin" asp-controller="Store" asp-action="Update" asp-route-StoreId="@Store.Id"><i class="bx bxs-edit"></i></a>
