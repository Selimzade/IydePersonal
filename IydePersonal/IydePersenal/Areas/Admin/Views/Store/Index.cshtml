            </div>
        </div>
    </div>
</div>
@*-------------------------------------------------------------------------------------------*@


<div class="modal fade" id="inventoryModal" tabindex="-1" aria-labelledby="inventoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <!-- Burada `modal-xl` və `modal-dialog-centered` əlavə olundu -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inventoryModalLabel">Mağaza İnventarları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Store ID: @ViewBag.StoreId</p>
                <button class="btn btn-success mb-3" data-store-id="@ViewBag.StoreId" onclick="openAddInventoryModal(this)">+ Əlavə Et</button>
                <div id="inventoryContainer"></div>
            </div>
            <div class="modal-body" id="inventoryContainer">
                <!-- İnventar siyahısı AJAX ilə bura yüklənəcək -->
            </div>
        </div>
    </div>
</div>
<!------------------------------------------------------------------------------------------------>

<div class="modal fade" id="addInventoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni İnventar Əlavə Et</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addInventoryForm">
                    <input type="hidden" id="storeId" name="storeId">
                    <div class="mb-3">
                        <label>Ad</label>
                        <input type="text" class="form-control" id="inventoryName" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label>Sayı</label>
                        <input type="number" class="form-control" id="inventoryCount" name="Count" required>
                    </div>
                    <div class="mb-3">
                        <label>Qiymət</label>
                        <input type="number" class="form-control" id="inventoryPrice" name="Price" required>
                    </div>
                    <div class="mb-3">
                        <label>Təchizatçı</label>
                        <input type="text" class="form-control" id="inventorySupplier" name="Supplier" required>
                    </div>
                    <div class="mb-3">
                        <label>Açıqlama</label>
                        <textarea class="form-control" id="inventoryDescription" name="Description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Yadda saxla</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!------------------------------------------------------------------------------------------------>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
         function openAddInventoryModal(button) {
        var storeId = $(button).data("store-id"); // Düymədən mağaza ID-ni al
        console.log("Store ID:", storeId); // Debug üçün Console-da yoxla
        $("#storeId").val(storeId); // Modal formuna ID-ni yaz
        $("#addInventoryModal").modal("show");
    }

      $("#addInventoryForm").submit(function (e) {
        e.preventDefault();

         var storeId = $("#storeId").val();
        if (!storeId) {
        alert("Xəta: Mağaza seçilməyib!");
        return;
    }

       var formData = {
        StoreId: parseInt($("#storeId").val()) || 0,
        Name: $("#inventoryName").val(),
        Count: parseInt($("#inventoryCount").val()) || 0,
        Price: parseFloat($("#inventoryPrice").val()) || 0.0,
        Supplier: $("#inventorySupplier").val(),
        Description: $("#inventoryDescription").val()
    };
    console.log("Göndərilən Data:", formData); // Debug üçün
        
        $.ajax({
            url: '/Admin/StoreInventory/AddInventory', // Admin sahəsindədirsə bunu yoxla
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function () {
                alert("İnventar əlavə olundu!");
                $("#addInventoryModal").modal("hide");
                openInventoryModal(formData.StoreId); // Siyahını yenilə
            },
            error: function (xhr, status, error) {
                console.log(xhr.responseText);
                alert("Xəta baş verdi: " + xhr.responseText);
            }
        });
    });
</script>

<script>
    function openInventoryModal(storeId) {
        $.get('/Admin/StoreInventory/GetInventories?storeId=' + storeId, function(data) {
            $("#inventoryContainer").html(data);
            $("#inventoryModal").modal("show");
        }).fail(function() {
            alert("Xəta baş verdi: Server sorğunu tapa bilmir! (404)");
        });
    }
</script>


