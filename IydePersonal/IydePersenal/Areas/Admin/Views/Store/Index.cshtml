<div class="modal fade" id="inventoryModal" tabindex="-1" aria-labelledby="inventoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <!-- Burada `modal-xl` və `modal-dialog-centered` əlavə olundu -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inventoryModalLabel">Mağaza İnventarları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <button class="btn btn-primary btn-sm float-end" onclick="openAddInventoryModal()"> <i class="bx bx-plus-circle"></i></button>

                <div id="inventoryContainer"></div>
            </div>
            <div class="modal-body" id="inventoryContainer">
                <!-- İnventar siyahısı AJAX ilə bura yüklənəcək -->
            </div>
        </div>
    </div>
</div>
<!------------------------------------------------------------------------------------------------>
<div id="AddinventoryModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">İnventar Əlavə Et</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="inventoryForm">

                    <div class="form-group">
                        <label for="storeId">Mağaza</label>
                        <select id="storeId" class="form-control" required>
                            <option value="">Mağaza seçin...</option>
                            @foreach (var store in Model)
                            {
                                <option value="@store.Id">@store.Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="name">İnventar Adı</label>
                        <input type="text" id="name" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="count">Say</label>
                        <input type="number" id="count" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="price">Qiymət</label>
                        <input type="number" id="price" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="supplier">Təchizatçı</label>
                        <input type="text" id="supplier" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="description">Təsvir</label>
                        <textarea id="description" class="form-control"></textarea>
                    </div>

                    <button type="submit" class="btn btn-success">Əlavə Et</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!------------------------------------------------------------------------------------------------>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
           function openAddInventoryModal() {
        $("#AddinventoryModal").modal("show");
    }

    // Formu AJAX ilə göndər
    $("#inventoryForm").submit(function (event) {
        event.preventDefault();

        var inventoryData = {
            StoreId: $("#storeId").val(),
            Name: $("#name").val(),
            Count: $("#count").val(),
            Price: $("#price").val(),
            Supplier: $("#supplier").val(),
            Description: $("#description").val()
        };

        if (!inventoryData.StoreId) {
            alert("Xəta: Mağaza seçilməyib!");
            return;
        }

        $.ajax({
            url: "/Admin/StoreInventory/AddInventory",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(inventoryData),
            success: function (response) {
                alert("İnventar uğurla əlavə edildi!");
                $("#inventoryModal").modal("hide");
                location.reload();
            },
            error: function (xhr) {
                alert("Xəta: " + xhr.responseText);
            }
        });
    });

</script>

<script>
    function openInventoryModal(storeId) {
        $.get('/Admin/StoreInventory/GetInventories?storeId=' + storeId, function(data) {
            $("#inventoryContainer").html(data);
            $("#inventoryModal").modal("show");
        }).fail(function() {
            alert("Xəta baş verdi: Server sorğunu tapa bilmir! (404)");
        });
    }
</script>


