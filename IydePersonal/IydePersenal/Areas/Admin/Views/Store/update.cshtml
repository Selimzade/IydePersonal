@using IydePersonal.Application.Dtos.Shop
@model StoreUpdateDto

<div class="container-xxl flex-grow-1 container-p-y" style="margin-right:50px">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><b>Store</b> /</span> Update Stores</h4>
    <form asp-controller="Store" asp-action="Update" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <input type="hidden" asp-for="Id"/>
            <div class="col-md-10">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" style="color:blue" class="form-label">StoreName</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Text" aria-label="default input example" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <div class="form-group">
            <button type="submit" class="btn btn btn-primary btn-block"> Save</button>
        </div>
    </form>



</div>