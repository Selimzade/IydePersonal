@model UserCreateDto



 <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> <b>Users</b> /</span> Add Users</h4>

    <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"  style="color:red"></div>
        
                <div class="row">
           
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="container">
                     
                            </div>
                            <div class="card-body">
                               

                                    <div class="form-group">
                                        <label asp-for ="FirstName" class="form-label"> FirstName </label>
                                        <input asp-for="FirstName" type="text" class="form-control mb-3" placeholder="Text">
                                    </div>
                                     <div class="form-group">
                                         <label asp-for="LastName"  class="form-label">LastName </label>
                                         <input asp-for="LastName" type="text"  class="form-control mb-3" placeholder="Text">
                                     </div>
                                    <div class="form-group">
                                        <label asp-for="UserName" class="form-label">UserName </label>
                                        <input asp-for="UserName" type="text" class="form-control mb-3" placeholder="Text">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password" class="form-label">PassWord </label>
                                        <input asp-for="Password" type="password" class="form-control mb-3" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="RoleId" class="form-label">Role </label>
                                        <select asp-for="RoleId"class="form-control"  asp-items="@(new SelectList(Model.Roles, "Id","Name"))"> <option selected> Select</option></select>
                                    </div>


                                
                            </div>
                        </div>
                    </div>
           
                </div>

        <div class="form-group">
            <button type="submit" class="btn btn btn-primary btn-block"> Save</button>
        </div>

    </form> 

</div>

