@using IydePersonal.Application.Dtos.Punkt
@model PunktAddDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><b>Punkt</b> /</span> Add Punkts</h4>

    <form asp-controller="Punkt" asp-action="Add" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">

            <div class="col-md-10">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" style="color:blue" class="form-label">PunktName</label> <br />
                            <textarea asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" rows="1.5" cols="30" placeholder="Plaese write punkts" aria-describedby="defaultFormControlHelp"></textarea>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                     


                    </div>

                </div>
            </div>
            <div class="col-md-2">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Point" style="color:blue" class="form-label">Point</label>
                            <input asp-for="Point" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Number" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Point" class="text-danger"></span>
                        </div>
                     
                    </div>

                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn btn-primary btn-block"> Save</button>
        </div>
    </form>



</div>


