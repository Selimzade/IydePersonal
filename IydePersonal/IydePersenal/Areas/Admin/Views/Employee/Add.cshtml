<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><b>Employees</b> /</span> Add Employee</h4>
    <form asp-controller="Employee" asp-action="Add" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                       
                        <div class="form-group">
                            <label asp-for="FullName" style="color:blue;font-size:medium" class="form-label">FirstName</label>
                            <input asp-for="FullName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please write Name" aria-label="default input example" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        @* <div class="form-group">
                            <label asp-for="LastName" class="form-label">LastName</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please write lastname" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div> *@
                        <div class="form-group">
                            <label asp-for="Gender" style="color:blue;font-size:medium" class="form-label">Gender</label>
                            <input asp-for="Gender" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Text" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfBirth" style="color:blue;font-size:medium" class="form-label">DateOfBirth</label>
                            <input asp-for="DateOfBirth" type="datetime-local" class="form-control mb-3" id="defaultFormControlInput" placeholder="Text" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" style="color:blue;font-size:medium" class="form-label">PhoneNumber</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please Write number" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                       
                        <div class="form-group">
                            <label asp-for="WorkPosition" style="color:blue;font-size:medium" class="form-label">WorkPosition</label>
                            <input asp-for="WorkPosition" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Text" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="WorkPosition" class="text-danger"></span>
                        </div>


                    </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="FixSalary" style="color:blue;font-size:medium" class="form-label">FixSalary</label>
                            <input asp-for="FixSalary" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Number" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="FixSalary" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" style="color:blue;font-size:medium" class="form-label">Address</label>
                            <input asp-for="Address" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Write your adress" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                      
                        <div class="form-group">
                            <label asp-for="UserId" style="color:blue;font-size:medium" class="form-label">Users</label>
                            <select id="Userslist" class="form-select mb-3" asp-for="UserId" asp-items="@(new SelectList(Model.userListDtos,"Id","UserName"))"> <option selected> Select</option> </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                      @*   <div class="form-group">
                            <label asp-for="IsActive" class="form-label">IsActive</label>
                            <input asp-for="IsActive" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder=" " aria-describedby="defaultFormControlHelp" />
                        </div> *@
                       
                        <div class="form-group">
                            <label asp-for="StartWork" style="color:blue;font-size:medium" class="form-label">StartWork</label>
                            <input asp-for="StartWork" type="datetime-local" class="form-control mb-3" id="defaultFormControlInput" placeholder="" aria-describedby="defaultFormControlHelp" />
                            <div asp-validation-summary="ModelOnly"></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn btn-primary btn-block"> Save</button>
        </div>
    </form> 
       
</div>

