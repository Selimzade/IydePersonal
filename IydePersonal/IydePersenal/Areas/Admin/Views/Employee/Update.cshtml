@{
}

@model EmployeeUpdateDto


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><b>Employees</b> /</span> Update Employee</h4>
    <form asp-controller="Employee" asp-action="Update" method="post" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">

            <div class="col-md-6">
                <div class="card mb-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="FullName" style="color:blue" class="form-label">FirstName</label>
                            <input asp-for="FullName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please write Name" aria-describedby="defaultFormControlHelp" />
                        </div>
                        @* <div class="form-group">
                            <label asp-for="LastName" class="form-label">LastName</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please write lastname" aria-describedby="defaultFormControlHelp" />
                        </div> *@
                        <div class="form-group">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <input asp-for="Gender" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Text" aria-describedby="defaultFormControlHelp" />
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="form-label">DateOfBirth</label>
                            <input asp-for="DateOfBirth" type="datetime-local" class="form-control mb-3" id="defaultFormControlInput" placeholder="Text" aria-describedby="defaultFormControlHelp" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please Write number" aria-describedby="defaultFormControlHelp" />
                        </div>
                        <div class="form-group">
                            <label asp-for="WorkPosition" class="form-label">WorkPosition</label>
                            <input asp-for="WorkPosition" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Text" aria-describedby="defaultFormControlHelp" />
                        </div>


                    </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="FixSalary" class="form-label">FixSalary</label>
                            <input asp-for="FixSalary" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Number" aria-describedby="defaultFormControlHelp" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="form-label">Adress</label>
                            <input asp-for="Address" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Write your adress" aria-describedby="defaultFormControlHelp" />
                        </div>

                        <div class="form-group">
                            <label asp-for="UserId">Story</label>
                            <select id="Storylist" class="form-select mb-3" asp-for="UserId" asp-items="@(new SelectList(Model.userListDtos,"Id","UserName"))"> <option selected></option> </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div> 
                         @* <div class="form-group">
                            <label asp-for="IsActive" class="form-label">IsActive</label>
                            <input asp-for="IsActive" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder=" " aria-describedby="defaultFormControlHelp" />
                        </div>
  *@
                        <div class="form-group">
                            <label asp-for="StartWork" class="form-label">StarWork</label>
                            <input asp-for="StartWork" type="datetime-local" class="form-control mb-3" id="defaultFormControlInput" placeholder="" aria-describedby="defaultFormControlHelp" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn btn-primary btn-block"> Update</button>
        </div>
    </form>



</div>