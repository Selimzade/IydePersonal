@using IydePersonal.Application.Dtos.Employee
@model IEnumerable<EmployeeDto>

<div class="container-xxl flex-grow-1 container-p-y">
            
       <H4 class=" fw-bold py-3 mb-4">
           <span class="text-muted fw-light"><b>Employees List</b>/ </span> Employees
       </H4>

<!-- Hoverable Table rows -->

    <div class="card mb-4">
  
  <div class="table-responsive text-nowrap m-3 ">

      <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Employee" asp-action="Add">
          Add New Employee <i class="bx bx-plus"></i>
      </a>

    <table class="table table-dark"id="employeeTables" width="100%" cellspacing="0">
      <thead>
        <tr>
                      <th>FirstName</th>
                      <th>LastName</th>
                      <th>Gender</th>
                      <th>DateOfBirth</th>
                      <th>PhoneNumber</th>
                      <th>WorkPosition</th>
                      <th>Store</th>
                      <th>Adress</th>
                      <th>FixSalary</th>
                      <th>StarWork</th>
                      <th>IsActive</th>
                      <th>  </th>
    
        </tr>
      </thead>
      <tfoot>
                      <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Gender</th>
                        <th>DateOfBirth</th>
                        <th>PhoneNumber</th>
                        <th>WorkPosition</th>
                        <th>Store</th>
                        <th>Adress</th>
                        <th>FixSalary</th>
                        <th>StarWork</th>
                        <th>IsActive</th>
                        <th>  </th>
                      </tr>
      </tfoot>
      <tbody class="table-border-bottom-0">
        
                     @foreach (var Employee in Model)
                    {
                         <tr> 
                            <td>@Employee.FirstName</td>
                            <td>@Employee.LastName</td>
                            <td>@Employee.Gender</td>
                            <td>@Employee.DateOfBirth.ToShortDateString()</td>
                            <td>@Employee.PhoneNumber</td>
                            <td>@Employee.WorkPosition</td>
                            <td>@Employee.StoreId</td>
                            <td>@Employee.Adress</td>
                            <td>@Employee.FixSalary</td>
                            <td>@Employee.StartWork.ToShortDateString()</td>
                            <td>@(Employee.IsActive? "Active":"OnActive")</td>
                            <td>

                                <a class="btn btn-primary btn sm" data-Id="@Employee.Id"
                                   asp-area="Admin" asp-controller="Employee" asp-action="Update"asp-route-UpdateId="@Employee.Id">
                                    Update <i class="bx bxs-edit"></i>
                                </a>
                            </td>
                         </tr>
                    }
      </tbody>
    </table>
  </div>
</div>
   
    <!--/ Hoverable Table rows -->



  </div>

@section Scripts {
    <script src="~/js/JavaScript.js" type="application/ecmascript"></script>
}
