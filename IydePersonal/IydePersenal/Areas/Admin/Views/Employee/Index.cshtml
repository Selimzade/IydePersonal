@using IydePersonal.WEB.Conts

@model IEnumerable<EmployeeDto>

<div class="container-xxl flex-grow-1 container-p-y" style="width:100%">
            
       <H4 class=" fw-bold py-3 mb-4">
           <span class="text-muted fw-light"><b>Employees List</b>/ </span> Employees
       </H4>

<!-- Hoverable Table rows -->

        <div class="Card" 
                 <div class="card-body">
  
                       <div class="table-responsive text-nowrap m-3">

                                           @{
                                            @if (User.IsInRole($"{RoleConsts.Superadmin}"))
                                            {
                                                            <a class="btn btn-success btn-md mb-3" asp-area="Admin" asp-controller="Employee" asp-action="Add">
                                                             New <i class="bx bx-plus"></i>
                                                            </a>
                                                }
                                            }

                        
                                  <table class="display table table-striped table-hover " id="employeeTables" width="100%" cellspacing="0">
                                  <thead>
                                    <tr>
                                                  <th>FirstName</th>
                                                  <th>LastName</th>
                                                  <th>Gender</th>
                                                  <th>DateOfBirth</th>
                                                  <th>PhoneNumber</th>
                                                  <th>WorkPosition</th>
                                                  <th>Store</th>
                                                  <th>Adress</th>
                                                  <th>FixSalary</th>
                                                  <th>StarWork</th>
                                                    @{
                                                     @if (User.IsInRole($"{RoleConsts.Superadmin}"))
                                                        {
                                                         <th>Edit&Delete</th>
                                                        }
                                                     }
                      
                                                  
    
                                    </tr>
                                  </thead>
                               @*    <tfoot>
                                                  <tr>
                                                    <th>FirstName</th>
                                                    <th>LastName</th>
                                                    <th>Gender</th>
                                                    <th>DateOfBirth</th>
                                                    <th>PhoneNumber</th>
                                                    <th>WorkPosition</th>
                                                    <th>Store</th>
                                                    <th>Adress</th>
                                                    <th>FixSalary</th>
                                                    <th>StarWork</th>
                                                    @{
                                                      @if (User.IsInRole($"{RoleConsts.Superadmin}"))
                                                        {
                                                          <th>Edit&Delete</th>
                                                        }
                                                    }
                                                   
                                                  </tr>
                                  </tfoot> *@
                                  <tbody class="table-border-bottom-0">
        
                                                 @foreach (var Employee in Model)
                                                {
                                                     <tr name="@Employee.Id">
                                                        <td>@Employee.FirstName</td>
                                                        <td>@Employee.LastName</td>
                                                        <td>@Employee.Gender</td>
                                                        <td>@Employee.DateOfBirth.ToShortDateString()</td>
                                                        <td>@Employee.PhoneNumber</td>
                                                        <td>@Employee.WorkPosition</td>
                                                        <td>@Employee.Store.Name</td>
                                                        <td>@Employee.Adress</td>
                                                        <td>@Employee.FixSalary</td>
                                                        <td>@Employee.StartWork.ToShortDateString()</td>
                                                        @* <td>@(Employee.IsActive? "Active":"OnActive") *@

                                                        @{
                                                         @if (User.IsInRole($"{RoleConsts.Superadmin}"))
                                                            {
                                                                     <td>
                                                                        <a class="btn btn-primary btn-xs" data-Id="@Employee.Id" asp-area="Admin" asp-controller="Employee" asp-action="Update" asp-route-UpdateId="@Employee.Id"><i class="bx bxs-edit"></i></a>
                                                                        <a class="btn btn-danger btn-xs" data-Id="@Employee.Id" asp-area="Admin" asp-controller="Employee" asp-action="Delete" asp-route-UpdateId="@Employee.Id"><i class="bx bx-minus-circle"></i></a>
                                                                     </td>
                                                                        
                                                            }
                                                        }

                                                       
                                                     </tr>
                                                }
                                  </tbody>
                                </table>
                      </div>
                </div>
       </div>
   
    <!--/ Hoverable Table rows -->
 </div>




@section Scripts {
    <script src="~/js/JavaScript.js" type="application/ecmascript"></script>
}



