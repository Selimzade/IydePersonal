@using IydePersonal.Application.Dtos.Employee
@using IydePersonal.WEB.Models

@model List<EmployeeDto>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<!-- Hoverable Table rows -->
<div class="card">
    <h5 class="card-header">Hoverable rows</h5>
    <div class="table-responsive text-nowrap" id="articlesTable" width="100%" cellspacing="0">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Gender</th>
                    <th>DateOfBirth</th>
                    <th>PhoneNumber</th>
                    <th>WorkPosition</th>
                    <th>Active</th>
                    <th>FixSalary</th>
                    <th>StartWork</th>
                    <th>Store</th>
                    <
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Gender</th>
                    <th>DateOfBirth</th>
                    <th>PhoneNumber</th>
                    <th>WorkPosition</th>
                    <th>Active</th>
                    <th>FixSalary</th>
                    <th>StartWork</th>
                    <th>Store</th>
                </tr>
            </tfoot>
            <tbody class="table-border-bottom-0">
           
                @foreach (var employees in Model )
                {
                    <tr>
                        <td>@employees.FirstName</td>
                        <td>@employees.LastName</td>
                        <td>@employees.Gender</td>
                        <td>@employees.DateOfBirth</td>
                        <td>@employees.PhoneNumber</td>
                        <td>@employees.WorkPosition</td>
                        <td><span class="badge bg-label-primary me-1">@employees.IsActive</span></td>
                        <td>@employees.FixSalary</td>
                        <td>@employees.StartWork</td>
                         <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                   
                      
                    
                 }
            </tbody>
        </table>
    </div>
</div>
<!--/ Hoverable Table rows -->
@section Scripts {
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}